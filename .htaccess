## Generic settings
Options +FollowSymLinks -MultiViews -Indexes
RewriteEngine On
RewriteBase /
<FilesMatch "^\.([a-zA-Z0-9\.\_\-]{1,})$">
  Order Deny,Allow
  Deny from all
</FilesMatch>
##--
##-REWRITEPATH-START
SetEnvIf Request_URL "^.*" SHORTCUT_PATH=/dev
##-REWRITEPATH-END
##-REMOVE-WWW-START
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1%{REQUEST_URI} [R=301,QSA,NC,L]
##-REMOVE-WWW-END
#-FORCE-HTTPS-START
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
#-FORCE-HTTPS-END
##-APP-SHORTCUT-START
##-7os/web-app-400-START
RewriteRule ^(400)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-400/ [QSA,NC,L]
##-7os/web-app-400-END
##-7os/web-app-401-START
RewriteRule ^(401)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-401/ [QSA,NC,L]
##-7os/web-app-401-END
##-7os/web-app-403-START
RewriteRule ^(403)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-403/ [QSA,NC,L]
##-7os/web-app-403-END
##-7os/web-app-404-START
RewriteRule ^(404)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-404/ [QSA,NC,L]
##-7os/web-app-404-END
##-7os/web-app-500-START
RewriteRule ^(500)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-500/ [QSA,NC,L]
##-7os/web-app-500-END
##-7os/web-app-about-START
RewriteRule ^(about|about-us|aboutus)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-about/ [QSA,NC,L]
RewriteRule ^(about|about-us|aboutus)/([0-9a-zA-Z\-\.]{3,})$ %{ENV:SHORTCUT_PATH}/7os/web-app-about/pages/$2.php [QSA,NC,L]
RewriteRule ^(about|about-us|aboutus)/(.*)$ %{ENV:SHORTCUT_PATH}/7os/web-app-about/$2 [QSA,NC,L]
##-7os/web-app-about-END
##-7os/web-app-contact-START
RewriteRule ^(contact|contact-us|contactus)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-contact/ [QSA,NC,L]
RewriteRule ^(contact|contact-us|contactus)/([0-9a-zA-Z\-\.]{3,})$ %{ENV:SHORTCUT_PATH}/7os/web-app-contact/pages/$2.php [QSA,NC,L]
RewriteRule ^(contact|contact-us|contactus)/(.*)$ %{ENV:SHORTCUT_PATH}/7os/web-app-contact/$2 [QSA,NC,L]
##-7os/web-app-contact-END
##-7os/web-app-terms-START
RewriteRule ^(terms?)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-terms/ [QSA,NC,L]
RewriteRule ^(terms?)/([0-9a-zA-Z\-\.]{3,})$ %{ENV:SHORTCUT_PATH}/7os/web-app-terms/pages/$2.php [QSA,NC,L]
RewriteRule ^(terms?)/(.*)$ %{ENV:SHORTCUT_PATH}/7os/web-app-terms/$2 [QSA,NC,L]
##-7os/web-app-terms-END
##-7os/web-app-policy-START
RewriteRule ^(policy|policies)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-policy/ [QSA,NC,L]
RewriteRule ^(policy|policies)/([0-9a-zA-Z\-\.]{3,})$ %{ENV:SHORTCUT_PATH}/7os/web-app-policy/pages/$2.php [QSA,NC,L]
RewriteRule ^(policy|policies)/(.*)$ %{ENV:SHORTCUT_PATH}/7os/web-app-policy/$2 [QSA,NC,L]
##-7os/web-app-policy-END
##-7os/web-app-faqs-START
RewriteRule ^(faqs?)/?$ %{ENV:SHORTCUT_PATH}/7os/web-app-faqs/ [QSA,NC,L]
